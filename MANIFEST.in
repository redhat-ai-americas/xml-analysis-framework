# Include essential files
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include documentation
recursive-include docs *.md *.rst *.txt
recursive-include examples *.py *.md

# Include source code
recursive-include src *.py

# Exclude ALL development artifacts and virtual environments
global-exclude venv
global-exclude .venv
prune venv
prune .venv
prune build
prune dist
prune .git
prune .pytest_cache
prune __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.egg-info
recursive-exclude tests *
recursive-exclude test_outputs *
recursive-exclude artifacts *
recursive-exclude scripts/debug *
recursive-exclude notebooks/venv *
recursive-exclude .coverage *
exclude *.json
exclude save_scap_chunks.py
exclude view_chunk_content.py
exclude *_analysis_*.json
exclude *_chunks_*.json
exclude chunking_analysis_*.json
exclude scap_*.json
exclude servicenow_*.json
exclude .gitignore
exclude .env
exclude .env.*
exclude publish_pypi.sh

# Include package data
global-include *.txt *.md