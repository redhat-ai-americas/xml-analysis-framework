            processing_time = time.time() - start_time
            results['processing_times'].append(processing_time)
            
            if 'error' in result:
                print(f"    ‚ùå Error: {result['error']}")
                results['failed'] += 1
                results['errors'].append({
                    'file': str(relative_path),
                    'error': result['error']
                })
            else:
