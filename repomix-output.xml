                # Move window (with overlap)
                overlap_size = 0
                overlap_count = 0
                
                # Count backwards to find overlap point
                for k in range(len(chunk_elements) - 1, -1, -1):
                    overlap_size += self.estimate_tokens(chunk_elements[k]['content'])
                    overlap_count += 1
                    if overlap_size >= self.config.overlap_size:
